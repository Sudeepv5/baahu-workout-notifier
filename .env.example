# Gym Workout Page URL
GYM_WORKOUT_URL=https://url.here

# Telegram Bot Configuration
# Get token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Get your chat ID from @userinfobot or by messaging your bot
TELEGRAM_CHAT_ID=your_chat_id_here

# Timezone for scheduling (PST = America/Los_Angeles)
TIMEZONE=America/Los_Angeles

# OCR Engine: tesseract or google-vision
OCR_ENGINE=tesseract

# Optional: Google Cloud Vision API Key (if using google-vision)
# GOOGLE_VISION_API_KEY=your_api_key_here

# Debug mode (set to true for verbose logging)
DEBUG=false

# Scraping Configuration
# CSS selector for the workout carousel container
# Examples: .carousel, #workout-gallery, [data-widget="carousel"]
CAROUSEL_SELECTOR=.your-carousel-selector

# How to match images by day name
# Options: alt-text (match in alt attribute), filename (match in src), both
IMAGE_MATCH_STRATEGY=both

# Image filename pattern (regex)
# Use {DAY} as placeholder for day name (Monday, Tuesday, etc.)
# Examples:
#   For "2-Monday-3.png" use: (\d+)-({DAY})-(\d+)\.png
#   For "Monday_workout.jpg" use: ({DAY})_workout\.jpg
IMAGE_FILENAME_PATTERN=(\d+)-({DAY})-(\d+)\.png

# Alt text pattern (for matching)
# Use {DAY} as placeholder for day name
# Examples: {DAY}, {DAY} Workout, Day: {DAY}
IMAGE_ALT_PATTERN={DAY}
